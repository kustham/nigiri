{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "organizeImports": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120,
        "ignore": []
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        }
    }
}
